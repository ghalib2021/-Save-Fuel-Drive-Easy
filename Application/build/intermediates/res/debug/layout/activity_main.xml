<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:id="@+id/linver"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/vertical_page_margin"
        android:paddingLeft="@dimen/horizontal_page_margin"
        android:paddingRight="@dimen/horizontal_page_margin"
        android:paddingTop="@dimen/vertical_page_margin">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <AutoCompleteTextView
        android:id="@+id/autocomplete_places"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/autocomplete_hint"
        android:textColor="@color/text" />

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:contentDescription="speak"
        android:src="@android:drawable/ic_btn_speak_now" />
    </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/google" />



        <TableLayout
          android:layout_width="fill_parent"
          android:gravity="center"
          android:layout_height="wrap_content">
            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_reset"
                    android:layout_width="100dp"
                    android:weightSum="1"
                    android:background="@color/colorAccent"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_text" />

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="100dp"
                    android:weightSum="1"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/text"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_text" />


                <Button
                    android:layout_width="100dp"
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textColor="@color/text"
                    android:layout_marginLeft="5dp"
                    android:text="sort"
                    android:id="@+id/buttonsort"
                    />



            </TableRow>

            </TableLayout>








    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_place"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColorPrimary"/>
    <ListView
        android:id="@+id/listViewplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:dividerHeight="0.2dp"
        android:textColor="#000"
        android:divider="@color/textColorSecondary"

        android:layout_gravity="center_horizontal" />
</LinearLayout><!-- From: file:/D:/aa/PlaceComplete/Application/src/main/res/layout/activity_main.xml -->